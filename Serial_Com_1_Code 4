#코드 4

int value = 77;

void setup(){
  Serial.begin(9600);
  Serial.print("DEC:");
  Serial.println(value);
  Serial.print("BIN:");
  Serial.println(value, BIN);
  Serial.print("OCT:");
  Serial.println(value, OCT);
  Serial.print("HEX:");
  Serial.println(value, HEX);
  
}

void loop(){

}  

결과값
DEC:77
BIN:1001101
OCT:115
HEX:4D
